{% extends "base.j2" %}
{% block title %}{{ region.admin_name|xml_encode }}{% endblock %}
{% block body %}

<h1>{{ region.admin_name }}</h1>

<h2>Rivers in {{ region.admin_name }}</h2>

<div class=rivers>
<ul>
	{% for river in rivers %}
		<li><a href="{{ river['url_path'] }}">{{ river['ww_name'] }} ({{ river['length_m']|fmt_length }})</a></li>
	{% endfor %}
</ul>
</div>

{% endblock %}
